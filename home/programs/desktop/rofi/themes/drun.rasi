* {
    background-color: transparent;
    text-color: rgba(255, 255, 255, 1);
    font: "JetBrainsMono Nerd Font 12";
}

configuration {
    modes: [drun];
    drun-display-format: "{name}";
    matching: "fuzzy";
    sort: true;
    sorting-method: "fzf";
    icon-theme: "Papirus";
    display-drun: " ";
}

window {
    /* Ensure minimum width, but allow scaling on larger screens */
    width: calc(30% max 450px min 600px);
    height: calc(70% min 800px);
    background-color: rgba(32, 32, 32, 0.95);
    border-radius: 10px;
    border: 2px;
    border-color: rgba(60, 60, 60, 1);
}

mainbox {
    padding: 1.5em;
    spacing: 1.5em;
}

inputbar {
    background-color: rgba(50, 50, 50, 1);
    children: ["prompt", "entry"];
    border-radius: 5px;
    padding: 0.9em;
    spacing: 0.5em;
}

entry {
    placeholder: "Search";
    placeholder-color: rgba(255,255,255,0.5);
}

listview {
    columns: 1;
    /* Reduced from 10 to 8 lines to prevent excessive height */
    lines: 8;
    border-color: transparent;
    spacing: 0.5em;
    /* Enable scrolling for more items */
    scrollbar: true;
}

scrollbar {
    width: 4px;
    border: 0;
    handle-width: 4px;
    handle-color: rgba(60, 60, 60, 1);
    padding: 0;
}

element {
    border-radius: 5px;
    orientation: horizontal;
    padding: 0.8em 1em;
    children: [element-icon, element-text];
    spacing: 1em;
}

element-icon {
    size: 1.5em;
}

element-text {
    highlight: none;
    horizontal-align: 0;
    vertical-align: 0.5;
}

element.selected {
    background-color: rgba(60, 60, 60, 1);
}